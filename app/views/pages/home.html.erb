<h1>Code Master Challenge</h1>
<% if user_signed_in? %>
  <p><%= link_to 'Add Student Award', new_student_award_path, class: 'btn btn-primary' %></p>
<% end %>
<table class="table">
  <thead>
    <tr>
      <th>Student</th>
      <% @disciplines.each do |d| %>
        <th class="text-xs-center"><i class="fa fa-<%= d.icon %>"></i> <%= d.name %></th>
      <% end %>
      <th class="text-xs-center">TOTAL</th>
    </tr>
  </thead>
  <tbody>
    <% @students.each do |student| %>
      <tr>
        <td><%= link_to student.name, student %></td>
        <% @disciplines.each do |d| %>
          <td class="text-xs-center"><%= award_total(student, d) %></td>
        <% end %>
        <td class="text-xs-center"><%= student.total_points %></td>
      </tr>
    <% end %>
  </tbody>
</table>
