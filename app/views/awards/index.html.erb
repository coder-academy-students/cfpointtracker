<h1>Listing awards</h1>

<table class="table">
    <tr>
      <th>Name</th>
      <th>Value</th>
      <th>Description</th>
        <th colspan="3"></th>
    </tr>

  <%= content_tag_for(:tr, @awards) do |award| %>
    <td><%= award.name %></td>
    <td><%= award.value %></td>
    <td><%= award.description %></td>
      <td><%= link_to 'Show', award %></td>
    <td><%= link_to 'Edit', edit_award_path(award), class: 'btn btn-edit' %></td>
    <td><%= link_to 'Delete', award, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-destroy' %></td>
  <% end %>
</table>


<div class="form-actions">
  <%= link_to 'New Award', new_award_path, class: 'btn btn-success' %>
</div>
