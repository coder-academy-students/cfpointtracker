<h1>Listing students</h1>

<table class="table">
    <tr>
      <th>Name</th>
      <th>Total_points</th>
        <th colspan="3"></th>
    </tr>

  <%= content_tag_for(:tr, @students) do |student| %>
    <td><%= student.name %></td>
    <td><%= student.total_points %></td>
      <td><%= link_to 'Show', student %></td>
    <td><%= link_to 'Edit', edit_student_path(student), class: 'btn btn-edit' %></td>
    <td><%= link_to 'Delete', student, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-destroy' %></td>
  <% end %>
</table>


<div class="form-actions">
  <%= link_to 'New Student', new_student_path, class: 'btn btn-success' %>
</div>
